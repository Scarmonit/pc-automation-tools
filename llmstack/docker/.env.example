# LLMStack Environment Configuration
# Copy this file to .env and update with your values

# Security Keys (generate with: openssl rand -base64 32)
SECRET_KEY=your-secret-key-here
CIPHER_SALT=your-cipher-salt-here
DATABASE_PASSWORD=your-database-password-here
CHROMA_TOKEN=your-chroma-token-here

# Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=changeme
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Model Endpoints (Local)
OLLAMA_HOST=http://host.docker.internal:11434
LM_STUDIO_HOST=http://host.docker.internal:1234
VLLM_HOST=http://host.docker.internal:8000
JAN_HOST=http://host.docker.internal:1337

# Default Models
DEFAULT_CHAT_MODEL=llama3.2:3b
DEFAULT_CODE_MODEL=codellama:7b
DEFAULT_EMBEDDING_MODEL=nomic-embed-text

# Feature Flags
ENABLE_SIGNUP=false
ENABLE_ANALYTICS=false
ENABLE_TELEMETRY=false
ENABLE_GPU=false

# Resource Limits
MAX_UPLOAD_SIZE=100M
MAX_CONTEXT_LENGTH=4096
MAX_TOKENS=2048
BATCH_SIZE=512

# Paths
DATA_PATH=./data
LOGS_PATH=./logs
CACHE_PATH=./cache

# Database Settings
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=llmstack
POSTGRES_USER=llmstack

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Vector Database
VECTOR_DB_TYPE=chroma
CHROMA_HOST=chroma
CHROMA_PORT=8000

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_PORT=9090

# Development Settings
DEBUG=false
LOG_LEVEL=INFO