[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .coverage,
    htmlcov,
    *.egg-info,
    build,
    dist,
    .venv,
    venv,
    env,
    .env
max-complexity = 10
select = E,W,F,C
per-file-ignores =
    __init__.py:F401
    tests/*:D
    */tests/*:D