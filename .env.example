# Google API - For search and other Google services
GOOGLE_API_KEY=your_google_api_key_here

# ============================
# Core Swarm Configuration
# ============================
AI_PLATFORM_URL=http://localhost:8000
TIDY_ASSISTANT_URL=http://localhost:8001
DEMO_TOKEN=demo-token
ENABLE_SWARM_INTELLIGENCE=true
ENABLE_DISTRIBUTED_MEMORY=true
ENABLE_COLLABORATION=true
MAX_AGENTS=10
WORKSPACE_ROOT=C:/Users/scarm

# Agent Configuration
QUEEN_AGENT_MODEL=claude-3-opus
WORKER_AGENT_MODEL=claude-3-sonnet
AGENT_TIMEOUT=300
AGENT_RETRY_ATTEMPTS=3

# ============================
# Database Configuration
# ============================
SWARM_MEMORY_DB=C:/Users/scarm/.claude/swarm-intelligence/swarm_memory.db
SWARM_CONFIG=C:/Users/scarm/.claude/swarm-intelligence/swarm_config.json
PROMPTS_CONFIG=C:/Users/scarm/.claude/swarm-intelligence/prompts_config.json
SYNC_DATABASE_PATH=C:/Users/scarm/.claude/swarm-intelligence/swarm_sync.db
BACKUP_DATABASE_PATH=C:/Users/scarm/backups/swarm_backup.db

# Database Settings
DATABASE_SYNC_INTERVAL=60
DATABASE_BACKUP_INTERVAL=3600
DATABASE_RETENTION_DAYS=30

# ============================
# Monitoring & Observability
# ============================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ALERTMANAGER_PORT=9093
LOG_LEVEL=INFO
ENABLE_MONITORING=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
METRICS_COLLECTION_INTERVAL=10

# Logging Configuration
LOG_FILE_PATH=C:/Users/scarm/logs/swarm.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_COUNT=5
ENABLE_DEBUG_LOGGING=false

# ============================
# Error Handling & Resilience
# ============================
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2
RETRY_MAX_DELAY=30
FALLBACK_MODE_ENABLED=true

# ============================
# Security Configuration
# ============================
JWT_SECRET_KEY=generate_a_secure_random_key_here_min_32_chars
ENCRYPTION_KEY=generate_another_secure_key_here_min_32_chars
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=60
ENABLE_AUTHENTICATION=true
ENABLE_SSL=false
SSL_CERT_PATH=
SSL_KEY_PATH=
ALLOWED_ORIGINS=http://localhost:*
CORS_ENABLED=true

# ============================
# AutoGPT Integration
# ============================
AUTOGPT_API_URL=http://localhost:3000
AUTOGPT_SECONDARY_URL=http://localhost:3001
AUTOGPT_FALLBACK_URL=http://localhost:3002
ENABLE_AUTOGPT=true
AUTOGPT_WORKSPACE=C:/Users/scarm/autogpt_workspace
AUTOGPT_MAX_ITERATIONS=25
AUTOGPT_MEMORY_BACKEND=local

# ============================
# API Bridge Configuration
# ============================
API_BRIDGE_PORT=8002
API_BRIDGE_ENABLED=true
ENABLE_LOAD_BALANCING=true
ENABLE_REQUEST_CACHING=true
CACHE_TTL=300
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100

# ============================
# Email Notifications
# ============================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
