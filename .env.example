DOCKER_ENABLED=false
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_PREFIX=swarm-ai
CONTAINER_MEMORY_LIMIT=2G
CONTAINER_CPU_LIMIT=1.0
