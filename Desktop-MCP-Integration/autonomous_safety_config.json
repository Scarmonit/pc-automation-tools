{
  "approval_settings": {
    "auto_approve_file_read": true,
    "auto_approve_safe_commands": true,
    "auto_approve_file_write_existing": false,
    "auto_approve_file_create": false,
    "auto_approve_risky_commands": false,
    "require_confirmation_for_multi_step": true
  },
  "allowed_commands": [
    "npm",
    "yarn",
    "pip",
    "python",
    "node",
    "java",
    "javac",
    "gcc",
    "g++",
    "make",
    "cmake",
    "cargo",
    "go",
    "dotnet",
    "git",
    "svn",
    "ls",
    "dir",
    "pwd",
    "which",
    "where",
    "find",
    "grep",
    "cat",
    "head",
    "tail",
    "wc",
    "sort",
    "uniq",
    "pytest",
    "jest",
    "eslint",
    "pylint",
    "flake8",
    "mypy",
    "tox",
    "coverage",
    "black",
    "prettier",
    "webpack",
    "rollup",
    "vite",
    "parcel",
    "docker"
  ],
  "dangerous_patterns": [
    "rm -rf",
    "del /s",
    "format",
    "fdisk",
    "mkfs",
    "dd if=",
    "sudo su",
    "chmod 777",
    "> /dev/",
    "curl | sh",
    "wget | sh",
    "eval $(",
    "exec("
  ],
  "workspace_restrictions": {
    "allow_parent_directory_access": false,
    "max_file_size_mb": 10,
    "backup_retention_days": 7,
    "max_snapshots": 50
  }
}